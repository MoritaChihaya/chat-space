  .left-header
    .box
      %p.user-name 
        = current_user.name
      %ul.menu
        %li.new-group
          = link_to "groups/new", class:"icon" do
            = icon('far', 'edit')
        %li.edit-user
          = link_to edit_user_path(current_user), class:"icon" do
            = icon('fas', 'cog')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .name
            = group.name
